<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/qqtopview" />

    <RelativeLayout
        android:id="@+id/num_itme_collectfagment_articlefragment_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/num_itme_collectfagment_articlefragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1." />


        <TextView
            android:id="@+id/name_itme_collectfagment_articlefragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/num_itme_collectfagment_articlefragment"
            android:enabled="true"
            android:maxLines="1"
            android:text="新形势下研究税务asdfasdfasdf"
            android:textColor="@color/Button_login" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/num_itme_collectfagment_articlefragment"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/author_itme_collectfagment_articlefragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="徐汇-" />

            <TextView
                android:id="@+id/author_type_itme_collectfagment_articlefragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="财会学习-" />

            <TextView
                android:id="@+id/author_num_itme_collectfagment_articlefragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020年09期" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/qqtopview" />
</LinearLayout>