<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/popwin_shape"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/popwin_shape">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="支付方式"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/shopping_pay_pop_quit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:text="X"
                android:textSize="16sp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/shopping_pay_pop_zfb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/popwin_shape"
            android:padding="10dp">

            <ImageView
                android:id="@+id/shopping_pay_pop_zfb_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/zfbpay" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/shopping_pay_pop_zfb_image"
                android:text="支付宝支付"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/shopping_pay_pop_zfb_sele"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="3dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_red_mark"
                android:padding="10dp"
                android:text="X"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/shopping_pay_pop_wx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="200dp"
            android:background="@drawable/popwin_shape"
            android:padding="10dp">

            <ImageView
                android:id="@+id/shopping_pay_pop_wx_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/wxpay" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/shopping_pay_pop_wx_image"
                android:text="微信支付"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/shopping_pay_pop_wx_sele"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="3dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_white"
                android:padding="10dp"
                android:textSize="16sp" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>