<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/alloder_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_title"
        android:background="@color/ffffff"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/Button_login"
        app:tabMaxWidth="0dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="#262626"
        app:tabTextColor="#262626" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/billing_tabLayout"
        android:background="@color/background_gray" />

    <FrameLayout
        android:id="@+id/allorder_info_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/billing_tabLayout"
        android:layout_marginTop="10dp"
        />

</LinearLayout>