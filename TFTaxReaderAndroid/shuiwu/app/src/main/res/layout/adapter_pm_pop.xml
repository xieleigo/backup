<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/pm_pop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ffffff">

        <TextView
            android:id="@+id/pm_pop_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/phb_image"
            android:enabled="true"
            android:maxLines="2"
            android:padding="10dp"
            android:text="中国asdfadsfasdfas税务"
            android:textColor="@color/black" />

        <ListView
            android:id="@+id/pop_chid_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/pm_pop_text" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/qqtopview" />
    </RelativeLayout>
</RelativeLayout>