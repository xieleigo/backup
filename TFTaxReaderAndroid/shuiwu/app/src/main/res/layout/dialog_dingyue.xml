<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/ffffff"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#e4e4e4" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="请选择购买的选项"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/quit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="X"
                android:textColor="@color/black" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#e4e4e4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/benpian_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/CollectFragment_buttont_Text"
                android:paddingLeft="15dp"
                android:paddingTop="3dp"
                android:paddingRight="15dp"
                android:paddingBottom="7dp"
                android:text="本篇"
                android:textColor="@color/ffffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/benqi_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@color/CollectFragment_buttont_Text"
                android:paddingLeft="15dp"
                android:paddingTop="3dp"
                android:paddingRight="15dp"
                android:paddingBottom="7dp"
                android:text="本期"
                android:textColor="@color/ffffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/danqi_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@color/background_gray"
                android:paddingLeft="15dp"
                android:paddingTop="3dp"
                android:paddingRight="15dp"
                android:paddingBottom="7dp"
                android:text="单期"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/allyear_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@color/background_gray"
                android:paddingLeft="15dp"
                android:paddingTop="3dp"
                android:paddingRight="15dp"
                android:paddingBottom="7dp"
                android:text="全年"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#e4e4e4" />

        <RelativeLayout
            android:id="@+id/benpian_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/benpian_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:singleLine="true"
                android:text="fasdfasdfasdfasdfdfasdfasdfasdfasdfasdfasdf" />

            <TextView
                android:id="@+id/benpian_qikan_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/benpian_name"
                android:layout_marginTop="10dp"
                android:enabled="true"
                android:singleLine="true"
                android:text="《税务研究证件》"
                android:textColor="@color/CollectFragment_buttont_Text" />

            <TextView
                android:id="@+id/benpian_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/benpian_name"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/benpian_qikan_name"
                android:enabled="true"
                android:singleLine="true"
                android:text="- 1987年第2期"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/benpian_qian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/benpian_name"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="￥15.00"
                android:textColor="@color/addBillingInfotext" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/benqi_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/benqi_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020年" />

            <TextView
                android:id="@+id/benqi_qi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/benqi_year"
                android:text="第6期" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_edit_subtract"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:src="@drawable/iv_edit_subtract" />

                <TextView
                    android:id="@+id/tv_edit_buy_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minEms="1"
                    android:text="1"
                    android:textColor="#666666"
                    android:textSize="12dp" />

                <ImageView
                    android:id="@+id/iv_edit_add"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:src="@drawable/iv_edit_add" />
            </LinearLayout>

            <TextView
                android:id="@+id/benqi_qianqian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="￥15.00"
                android:textColor="@color/addBillingInfotext" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/quannian_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/quannian_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020年" />

            <TextView
                android:id="@+id/quannian_qi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/quannian_year"
                android:text="全年" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/quannian_subtract"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:src="@drawable/iv_edit_subtract" />

                <TextView
                    android:id="@+id/quannian_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minEms="1"
                    android:text="1"
                    android:textColor="#666666"
                    android:textSize="12dp" />

                <ImageView
                    android:id="@+id/quannian_add"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:src="@drawable/iv_edit_add" />
            </LinearLayout>

            <TextView
                android:id="@+id/quannian_qianqian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="￥15.00"
                android:textColor="@color/addBillingInfotext" />
        </RelativeLayout>

        <GridLayout
            android:id="@+id/danqi_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="5"
            android:orientation="horizontal"
            android:padding="20dp"
            android:rowCount="10"
            android:visibility="gone">

        </GridLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#e4e4e4" />

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/add_showpingcar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#EC9352"
                android:gravity="center"
                android:text="加入购物车"
                android:textColor="@color/ffffff"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/to_showping"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#EE6F2D"
                android:gravity="center"
                android:text="直接购买"
                android:textColor="@color/ffffff"
                android:textSize="17dp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/lineblow"
        android:layout_width="0.5dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#e4e4e4" />

</RelativeLayout>