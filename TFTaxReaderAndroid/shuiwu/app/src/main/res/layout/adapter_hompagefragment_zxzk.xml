<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/new_periodical_laout"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp">

        <ImageView
            android:id="@+id/new_periodical_image"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/zgsw" />

        <ImageView
            android:id="@+id/image_free"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/syfree" />
    </RelativeLayout>

    <TextView
        android:id="@+id/new_periodical_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/new_periodical_laout"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="中国税务"
        android:textColor="@color/Button_login"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/new_periodical_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_periodical_name"
        android:layout_toRightOf="@+id/new_periodical_laout"
        android:ellipsize="end"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/text_gray"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/new_periodical_info1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_periodical_num"
        android:layout_toRightOf="@+id/new_periodical_laout"
        android:ellipsize="end"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/black"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/new_periodical_info2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_periodical_info1"
        android:layout_toRightOf="@+id/new_periodical_laout"
        android:ellipsize="end"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/black"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/new_periodical_info3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_periodical_info2"
        android:layout_toRightOf="@+id/new_periodical_laout"
        android:ellipsize="end"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/black"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/new_periodical_info4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_periodical_info3"
        android:layout_toRightOf="@+id/new_periodical_laout"
        android:ellipsize="end"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/black"
        android:textSize="10dp" />
</RelativeLayout>