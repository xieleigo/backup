<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ffffff"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <EditText
        android:id="@+id/register_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/registeredtext_shape"
        android:hint="用户名"
        android:padding="15dp"
        android:singleLine="true"
        android:textSize="20sp"
        android:visibility="gone"></EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/registeredtext_shape"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/register_phone_tepy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center"
            android:text="+86"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/register_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@null"
            android:digits="1234567890"
            android:hint="手机号"
            android:padding="15dp"
            android:singleLine="true"
            android:text=""
            android:textSize="20sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:padding="1dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/register_image_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/registeredtext_shape"
            android:hint="输入图片验证码"
            android:padding="15dp"
            android:singleLine="true"
            android:textSize="20sp" />


        <ImageView
            android:id="@+id/register_codeimage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:padding="1dp">

        <EditText
            android:id="@+id/register_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/registeredtext_shape"
            android:hint="输入验证码"
            android:padding="15dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/register_codebut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="获取验证码"
            android:textColor="@color/ffffff"
            android:textSize="14sp" />
    </LinearLayout>


    <EditText
        android:id="@+id/register_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/registeredtext_shape"
        android:hint="密码"
        android:padding="15dp"
        android:password="true"
        android:singleLine="true"
        android:text=""
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:text="密码为8-16位数字和大小写字母组合！"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/register_agin_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/registeredtext_shape"
        android:hint="确认密码"
        android:padding="15dp"
        android:password="true"
        android:singleLine="true"
        android:text=""
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/register_drss_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/registeredtext_shape"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/register_drss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:hint="请选择地区"
            android:padding="15dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/register_drss_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:padding="15dp"
            android:singleLine="true"
            android:textSize="20sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/register_drss_arrow"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="6"
            android:gravity="center"
            android:src="@drawable/arrow01"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/is_agreement"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/is1" />

        <TextView
            android:id="@+id/agreement_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/is_agreement"
            android:gravity="center"
            android:text="中国税务杂志社税刊阅读注册协议"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/register_but"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pass_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/login_login_button_shape"
        android:text="立即注册"
        android:textColor="@color/ffffff"
        android:textSize="20sp" />
</LinearLayout>